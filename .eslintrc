{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "react/jsx-filename-extension": "off",
    "react/jsx-props-no-spreading": "off",
    "react/forbid-prop-types": "off",
    "import/prefer-default-export": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": [
        ["@components", "./src/components"],
        ["@helpers", "./src/helpers"],
        ["@pages", "./src/pages"],
        ["@", "./src"]
      ]
    }
  },
  "env": {
    "jest": true
  }
}
